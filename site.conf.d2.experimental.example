                '523b9680e41b04e28ef9f839856498859930e3033fd39a7118305f2e0fbc205c', -- Andre
                '57a43b0d8cd7af864dedee693ba364e50324c78da4a929067a9eea8f8aa6b768', -- Joerg
        },
        },
      experimental = {
        name = 'experimental',
        -- List of mirrors to fetch images from. IPv6 required!
        mirrors = {'http://update.freifunk-lippe.de/experimental/d2/lip/upgrade', 'http://update2.freifunk-lippe.de/experimental/d2/lip/upgrade'},
        good_signatures = 1,
        -- List of public keys of maintainers.
